    <Pane BorderPane.alignment="CENTER">
        <ImageView fx:id="tentImage" layoutX="10" layoutY="10" fitWidth="280" fitHeight="400">
        </ImageView>
        <Label fx:id="labelName" layoutY="30" layoutX="300">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <Label fx:id="labelDescription" prefWidth="290" wrapText="true" layoutY="65" layoutX="300">
            <font>
                <Font name="System" size="18.0"/>
            </font>
        </Label>
        <Label fx:id="labelPrice" prefWidth="290" alignment="BASELINE_RIGHT" layoutY="350"
               layoutX="300">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Button onAction="#onButtonOrderClicked" text="Order" prefHeight="40" prefWidth="100" layoutX="380"
                layoutY="400"/>
        <Button onAction="#onButtonCancelClicked" text="Cancel" prefHeight="40" prefWidth="100" layoutX="490"
                layoutY="400"/>
